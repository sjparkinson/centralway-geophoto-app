
@{
    ViewBag.Title = "Index";
}

<div class="container" ng-controller="SearchController">
    <h1>Search for a Location</h1>

    <form ng-submit="onSearchSubmit()">
        <p class="form-group">
            <input type="text" class="form-control" ng-model="query" />
        </p>
    </form>

    <div class="container" ng-hide="!submitted">
        <h2>Do you mean...</h2>

        <ul>
            <li ng-repeat="place in places"><a ng-click="onPlaceClick(place)" href="javascript:false;">{{getAddress(place)}}</a></li>
        </ul>
    </div>
</div>

<div class="container" ng-controller="MapController">
    <h2>Map</h2>

    <div id="map-canvas" style="width: 100%; height: 400px;"></div>
</div>

<div class="container" ng-controller="PhotoListController" ng-hide="!markerClicked">
    <h2>Photos</h2>

    <p>via {{source}}</p>

    <h3 ng-hide="hideLoading">Loading...</h3>

    <ul class="photos">
        <li ng-repeat="photo in photos" class="col-md-4"><img ng-src="{{photo.ImageURL}}" class="img-rounded img-responsive" /></li>
    </ul>
</div>